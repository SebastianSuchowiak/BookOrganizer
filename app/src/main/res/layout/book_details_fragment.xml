<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:textColor="@color/colorTextLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="score" />

                <TextView
                    android:id="@+id/tagsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textColor="@color/colorTextDark"
                    android:textSize="11sp" />

                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="5dp"
                    app:container_background_color="@color/colorPrimary"
                    app:container_border_width="0dp"
                    app:container_enable_drag="false"
                    app:horizontal_interval="10dp"
                    app:tag_corner_radius="5dp"
                    app:tag_horizontal_padding="3dp"
                    app:tag_text_color="@android:color/white"
                    app:tag_text_size="10sp"
                    app:tag_vertical_padding="3dp"
                    app:vertical_interval="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/card_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                android:text="Tags"
                android:textColor="@color/colorTagTest"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Tags"
                android:textColor="@color/colorTextDark"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>